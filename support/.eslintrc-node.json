{
  "parserOptions": {
    "sourceType": "script"
  },
  "plugins": [
    "node"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:node/recommended",
    "standard"
  ],
  "rules": {
    "guard-for-in": 2,
    "linebreak-style": 2,
    "max-len": [2, {"code": 120}],
    "no-bitwise": 2,
    "no-else-return": 2,
    "quote-props": [2, "as-needed"],
    "strict": 2
  }
}
