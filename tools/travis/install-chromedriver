#!/bin/sh -x

SCRIPT_DIR=`dirname "$0"`
. $SCRIPT_DIR/env.sh

CHROMEDRIVER_VERSION=2.26

CHROMEDRIVER_ARCHIVE_URL=https://chromedriver.storage.googleapis.com/$CHROMEDRIVER_VERSION/chromedriver_linux64.zip
CHROMEDRIVER_ARCHIVE_LOCAL=/tmp/chromedriver.zip

wget -O $CHROMEDRIVER_ARCHIVE_LOCAL $CHROMEDRIVER_ARCHIVE_URL
unzip $CHROMEDRIVER_ARCHIVE_LOCAL -d $ENV_LOCAL_BIN_DIR
rm $CHROMEDRIVER_ARCHIVE_LOCAL
