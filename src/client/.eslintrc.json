{
  "root": true,
  "extends": [
    "eslint:recommended",
    "crockford"
  ],
  "env": {
    "browser": true,
    "jquery": true
  },
  "globals": {
    "main": true
  },
  "rules": {
    "guard-for-in": "error",
    "max-len": ["error", {"code": 120}],
    "no-bitwise": "error",
    "no-caller": "error",
    "no-extend-native": "error",
    "no-extra-parens": "error",
    "no-new": "error",
    "no-use-before-define": ["error", "nofunc"],
    "strict": ["error", "function"]
  }
}
