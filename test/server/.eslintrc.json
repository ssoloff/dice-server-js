{
  "root": true,
  "plugins": [
    "node"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:node/recommended",
    "node-style-guide"
  ],
  "env": {
    "es6": true,
    "jasmine": true
  },
  "rules": {
    "comma-dangle": [2, "always-multiline"],
    "guard-for-in": 2,
    "indent": [2, 2, {"SwitchCase": 1}],
    "key-spacing": 2,
    "keyword-spacing": [2, {"before": true, "after": true}],
    "linebreak-style": 2,
    "max-len": [2, {"code": 120}],
    "no-bitwise": 2,
    "no-caller": 2,
    "no-else-return": 2,
    "no-extra-parens": 2,
    "no-new": 2,
    "no-plusplus": 2,
    "no-sequences": 2,
    "no-with": 2,
    "one-var": [2, {"initialized": "never", "uninitialized": "always"}],
    "quote-props": [2, "as-needed"],
    "space-after-keywords": "off",
    "space-before-blocks": 2,
    "space-before-function-paren": [2, "never"],
    "space-in-parens": 2,
    "space-infix-ops": 2,
    "spaced-comment": 2,
    "strict": 2
  }
}
